<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bfr.raffletool.MainActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="@string/welcome_message"
        android:textAppearance="@android:style/TextAppearance.Large" />


    <TextView
        android:id="@+id/tvSelectMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Week then Click Submit"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/spSelectWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/week"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvSelectMessage"
        android:layout_alignRight="@+id/btnCreateList"
        android:layout_alignEnd="@+id/btnCreateList" />

    <Button
        android:id="@+id/btnCreateList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="@android:color/holo_red_dark"
        android:text="@string/btn_create_list"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/spSelectWeek"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
